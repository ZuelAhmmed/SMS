@using SMS.Security
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="navbar">
        <div id="header-top">
            <div class="container">
                <div class="col-md-6 col-sm-6" style="padding-top: 3px; color: white;" align="left"><b>ই-মেইল : </b><em>abc@gmail.com</em>
                </div>
                <div class="col-md-3 col-sm-3" align="right">
                    @Html.Partial("_LanguagePartial")
                </div>
                <div class="col-md-3 col-sm-3" align="right">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        @Html.Partial("_HeadContentPartial")
        
    </header>

    <div class="container body-content">
        <div class="row">
            @RenderBody()
        </div>
        @Html.Partial("_FooterPartial")
    </div>

    <footer id="footer" class="container-fluid body-content text-center">

        <h4 id="conyright">&copy; @DateTime.Now.Year - <a href="@Developer.DevWebUrl" target="_blank">@Developer.DeveloperName</a> <span>by "</span><a href="@Developer.OrgWebUrl" target="_blank">@Developer.Organization</a><span>"</span></h4>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
